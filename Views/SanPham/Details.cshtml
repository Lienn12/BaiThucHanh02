@model BaiThucHanh02.Models.SanPham

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<h2>Chi tiết sản phẩm</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.Name</h4>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Url.Content(Model.Image)" width="200" height="200" />
        }
        else
        {
            <img src="~/Content/Images/default.jpg" width="200" height="200" />
        }

        <p><strong>Giá:</strong> @Model.Price</p>
        <p><strong>Mô tả:</strong> @Model.Description</p>
        <p><strong>Giảm giá:</strong> @Model.Discount%</p>
    </div>
</div>

<a href="@Url.Action("Index", "SanPham")" class="btn btn-secondary">Quay lại</a>
<a href="@Url.Action("EditForm", "SanPham", new { id = Model.Id })" class="btn btn-primary">Sửa</a>
